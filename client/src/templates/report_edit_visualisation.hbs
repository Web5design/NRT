<div class="editor">
  <span class="close-vis-edit">Close</span>
  <header>
    <h2>{{indicator.title}}</h2>
    <h3>Subtitle</h3>
  </header>
  <div class="visualisation">
    <button class="save">Save Visualisation</button>
    {{addSubViewTo thisView "BarChartView" width=550 visualisation=visualisation}}
  </div>

  <aside class="filters">
    <header>
      <h3>Data filters</h3>
      <a href="#">Reset all filters</a>
    </header>
  </aside>
</div>
