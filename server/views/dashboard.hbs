{{!< main}}

{{#contentFor 'header'}}
  <link rel="stylesheet" href="/css/dashboard.css">
{{/contentFor}}


<div class="content">

  <div class="dashboard-title">
    <h1>Dashboard</h1>
  </div>

  <section class="row-1">
  <div class="content-left column">
    <div class="content-title">
      <h2><i class="icon-tasks"></i>Work in progress</h2>
    </div>
    <div class="report green">
      <h3><i class="icon-file-text-alt"></i>Marine water quality report</h2>
      <div class="report-bar-container">
        <div class="report-bar" style="width: 76%; background-color: #55b265"><p>76%</p></div>
      </div>
    </div>
    <div class="report green">
      <h3><i class="icon-file-text-alt"></i>Mira indicator report</h2>
      <div class="report-bar-container">
        <div class="report-bar" style="width: 40%; background-color: #ffbd4c"><p>40%</p></div>
      </div>
    </div>
    <div class="indicator">
      <h3><i class="icon-bar-chart"></i>Land water quality report</h2>
      <p>Marine water quality report</p>
    </div>
    <div class="report orange">
      <h3><i class="icon-file-text-alt"></i>Land water quality report</h2>
      <div class="report-bar-container">
        <div class="report-bar" style="width: 45%; background-color: #ffbd4c"><p>45%</p></div>
      </div>
    </div>
    <a href="#">See all</a>
  </div>

  <div class="content-right column">
    <div class="content-title">
      <h2><i class="icon-exchange"></i>Notifications</h2>
    </div>
  </div>
  <div class="clear"></div>
  </section>

  <section class="row-2">
  <div class="content-left column">
    <div class="content-title">
      <h2><i class="icon-file-text-alt"></i>Latest edited reports</h2>
    </div>
  </div>

  <div class="content-right column">
    <div class="content-title">
      <h2><i class="icon-bar-chart"></i>Latest edited indicators</h2>
    </div>
  </div>
  <div class="clear"></div>
</section>

</div>