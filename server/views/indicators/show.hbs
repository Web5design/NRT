{{!< main}}

{{#contentFor 'header'}}
  <link rel="stylesheet" href="/css/indicator.css">
  <link rel="stylesheet" href="/css/medium-editor.css">

  <script src="/js/lib/d3.min.js"></script>
  <script src="/js/lib/underscore-min.js"></script>
  <script src="/js/lib/backbone-min.js"></script>
  <script src="/js/lib/backbone-relational.js"></script>
  <script src="/js/lib/handlebars.js"></script>
  <script src="/js/lib/diorama.js"></script>
  <script src="/js/lib/medium-editor.min.js"></script>
  <script src="/js/application.js"></script>
{{/contentFor}}

{{#contentFor 'breadcrumbs'}}
  <li class="home"><i class="icon-home"></i><a href="/">Home</a></li>
  <!-- THIS NAVIGATION MUST BE FIXED {{ indicator.theme.title }} -->
  <li><a href="#">Go back to theme {{ indicator.theme }}</a></li>
{{/contentFor}}
<div class="edit-bar-container">
  <div class="edit-bar">
    <p>Last edited on 7 July 2013</p>
    <button id="publish">Publish</button>
    <button>Discard Draft</button>
    <button>Back to published view</button>
  </div><!--edit bar-->
</div><!--edit bar container-->
<div class="content indicator">
  <article>
    <header>
      <h1>{{indicator.title}}</h1>

      <div class='indicator-buttons'>
        <a href="/api/indicators/{{indicator._id}}/data" class="button grey">
          <i class="icon-file-text-alt"></i> {{{t "indicator/view"}}}
        </a>

        <a href="/api/indicators/{{indicator._id}}/data.csv" class="button grey">
          <i class="icon-file-text-alt"></i> {{{t "indicator/download"}}}
        </a>
      </div>
    </header>

    <div class='main-content'>
    </div>

    <aside class="content-sidebar metadata">
      <h3>{{{t "indicator/owned_by"}}}</h3>
      <p>
        <i class="icon-user append"></i>
        Dr. Anybody
      </p>

      <section>
        <h3>{{{t "indicator/metadata"}}}</h3>
        <ul>
          <li>
            <h4>{{{t "indicator/metadata/category"}}}</h4>
            <span>
              <i class="icon-cloud append"></i>
              Atmosphere
            </span>
          </li>
          <li>
          <h4>{{{t "indicator/metadata/most_recent"}}}</h4>
            <span class="outdated">
              3 June 2013
              <span class="outdated-notice">
                <i class="icon-warning-sign"></i>
                outdated data
              </span>
            </span>
          </li>
          <li>
            <h4>{{{t "indicator/metadata/oldest_data"}}}</h4>
            <span>3 June 2013</span>
          </li>
          <li>
            <h4>{{{t "indicator/metadata/frequency"}}}</h4>
            <span>Yearly</span>
          </li>
          <li>
            <h4>{{{t "indicator/metadata/collected_by"}}}</h4>
            <span>Dr. Laila Ibrahim Al Dhaheri</span>
          </li>
          <li>
            <h4>{{{t "indicator/metadata/data_feed_url"}}}</h4>
            <span>Al Wathba Wetland Reserve</span>
          </li>
          <li>
            <h4>{{{t "indicator/metadata/contact"}}}</h4>
            <span>Dr. Laila Ibrahim Al Dhaheri, Executive Director, Terrestrial & Marine Biodiversity</span>
          </li>
        </ul>
      </section>
    </aside>
  </article>
</div>

<script type="text/javascript">
  i18n.onReady(function() {
    new Backbone.Controllers.IndicatorController({{{ indicatorJSON }}});
  });
</script>
